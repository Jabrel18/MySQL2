CREATE TABLE EmployeePosition(  
EmpID int (1) , 
EmpPosition varchar (30) , 
DateOfJoining date  , 
Salary decimal(10,2),
FOREIGN KEY(EmpID) REFERENCES EmployeeInfo(EmpID)   
);

